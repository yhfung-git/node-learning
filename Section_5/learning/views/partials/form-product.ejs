<form class="form-product" action="<%= path %>" method="POST">
  <div class="form-control">
    <label for="title">Title: </label>
    <input
      type="text"
      name="title"
      id="title"
      placeholder="Enter a product title"
      value="<%= editing ? product.title : "" %>"
    />
  </div>
  <div class="form-control">
    <label for="imageUrl">Image URL: </label>
    <input
      type="text"
      name="imageUrl"
      id="imageUrl"
      placeholder="Enter an image URL"
      value="<%= editing ? product.imageUrl : "" %>"
    />
  </div>
  <div class="form-control">
    <label for="price">Price: </label>
    <input
      type="number"
      name="price"
      id="price"
      min="0"
      step="0.01"
      placeholder="Enter a price"
      value="<%= editing ? product.price : 0 %>"
    />
  </div>
  <div class="form-control">
    <label for="description">Description: </label>
    <textarea
      name="description"
      id="description"
      rows="5"
      placeholder="Enter a description of your product..."
    ><%= editing ? product.description : "" %></textarea>
  </div>
  <% if (editing) { %>
    <input type="hidden" name="productId" value="<%= product._id %>">
  <% } %>
  <%- include("../partials/csrf-token-input") %>
  <button class="btn" type="submit">
    <%= editing ? "Update Product" : "Add Product" %>
  </button>
</form>
